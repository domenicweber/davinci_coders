<h2>Cars Listing</h2>

  <table id = "car_table" border = '1'>
    <thead>
    <tr>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        <td><%= number_to_currency(car.price) %></td>
        <td><%= link_to 'Edit Car' , edit_car_path(car) %></td>
      </tr>

    <% end %>
    </tbody>
  </table>
<br>


<%= link_to 'New Car' , new_car_path %>



